<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medicinereminder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".User.AddReminder" />
        <activity android:name=".User.Settings" />
        <activity android:name=".User.AllReminders" />
        <activity android:name=".User.Calendar" />
        <activity android:name=".User.UserProfile" />
        <activity android:name=".User.SignUp" />
        <activity android:name=".User.Login" />
        <activity android:name=".User.UserDashboard" />
        <activity android:name=".Common.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".HelperClasses.AlarmReceiver"/>
    </application>

</manifest>